      "inputMapping": {
        "topic": "$.trigger.topic",
        "maxPapers": "$.trigger.depth"
      },
      "outputMapping": {
        "papers": "$.output.papers",
        "synthesis": "$.output.synthesis",
        "gaps": "$.output.gaps",
        "summary": "$.output.summary"
      },
      "config": {}
    },
    {
      "id": "wait-scope",
      "type": "wait",
      "label": "Review Search Results",
      "position": {
        "x": 310,
        "y": 627
      },
      "waitType": "input",
      "prompt": "Review the broad search results. Approve to proceed with deep analysis, or refine the search.",
      "inputSchema": {
        "type": "object",
        "properties": {
          "approve": {
            "type": "boolean",
            "description": "Proceed with deep analysis"
          },
          "refinement": {
            "type": "string",
            "description": "Search refinement or additional focus areas"
          }
        },
        "required": [
          "approve"
        ]
      },
      "config": {}
    },
    {
      "id": "check-scope",
      "type": "condition",
      "label": "Scope OK?",
      "position": {
        "x": 320,
        "y": 909
      },
      "conditions": [
        {
          "path": "$.userResponses.wait-scope.approve",
          "operator": "eq",
          "value": true
        }
      ],
      "targetNodeId": "deep-search",
      "defaultTargetNodeId": "broad-search",
      "config": {},
      "logicOperator": "and"
    },
    {
      "id": "deep-search",
      "type": "agent",
