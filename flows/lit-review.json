    {
      "id": "trigger",
      "type": "trigger",
      "label": "Research Question",
      "position": {
        "x": 331.5,
        "y": 80
      },
      "triggerType": "manual",
      "triggerConfig": {
        "inputSchema": {
          "type": "object",
          "properties": {
            "topic": {
              "type": "string",
              "description": "Research topic or question"
            },
            "domain": {
              "type": "string",
              "description": "Research domain (e.g., machine-learning, HCI)"
            },
            "depth": {
              "type": "string",
              "description": "Review depth: quick (5-10 papers), standard (15-25), comprehensive (30+)"
            }
          },
          "required": [
            "topic"
          ]
        }
      },
      "config": {}
    },
    {
